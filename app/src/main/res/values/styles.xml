<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_Color</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="actionBarStyle">@style/AppName</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- App bar style -->
    <style name="AppName" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>
  <style name="App_Theme">
      <item name="tabIndicatorColor">@color/white</item>
      <item name="tabSelectedTextColor">@color/white</item>
      <item name="android:singleLine">true</item>
      <item name="tabBackground">@color/primary_Color</item>
      <item name="tabTextColor">@color/black</item>
      <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Menu</item>
  </style>
</resources>